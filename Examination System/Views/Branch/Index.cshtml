@model IEnumerable<Examination_System.Models.View_Models.BranchViewModel>

@{
    ViewData["Title"] = "Branches";
}

<h2>Branches</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create new branch </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Manager</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Location</td>
                <td>@item.ManagerName</td>
                <td>@(item.IsActive ? "Active" : "Not Active")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BranchId" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.BranchId" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.BranchId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>