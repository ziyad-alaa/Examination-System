@model Examination_System.Models.Topic

@{
    ViewData["Title"] = "Delete Topic";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-danger shadow-sm rounded-3">
                <div class="card-header bg-danger text-white text-center py-4">
                    <h3 class="mb-0"><i class="bi bi-trash me-2"></i>@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-4 text-center">

                    <!-- Warning Icon -->
                    <div class="text-center mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-danger display-4"></i>
                    </div>

                    <h4 class="text-danger mb-4">Are you sure?</h4>

                    <p class="lead mb-4">
                        Do you really want to delete the topic below?
                    </p>

                    <hr />

                    <!-- Topic Details -->
                    <dl class="row justify-content-center">
                        <dt class="col-sm-4 fw-bold text-start">Topic ID:</dt>
                        <dd class="col-sm-6 text-end">@Model.topicid</dd>

                        <dt class="col-sm-4 fw-bold text-start">Title:</dt>
                        <dd class="col-sm-6 text-end">@Model.title</dd>

                        <dt class="col-sm-4 fw-bold text-start">Course:</dt>
                        <dd class="col-sm-6 text-end">@(Model.crs != null ? Model.crs.crsname : "Not Assigned")</dd>
                    </dl>

                    <hr class="my-4" />

                    <!-- Confirmation Form -->
                    <form asp-action="Delete" method="post" class="d-grid gap-2">
                        <input type="hidden" asp-for="topicid" />
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="bi bi-trash me-2"></i>Delete Permanently
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-arrow-left-circle me-2"></i>Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>