@model Examination_System.Models.course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-danger shadow-sm rounded-3">
                <div class="card-header bg-danger text-white text-center py-4">
                    <h3 class="mb-0">Delete Course</h3>
                </div>
                <div class="card-body p-4">
                    <p class="text-center text-danger fs-5">Are you sure you want to delete this course?</p>

                    <hr />

                    <dl class="row mb-0">
                        <!-- ID -->
                        <dt class="col-sm-4 fw-bold">Course ID:</dt>
                        <dd class="col-sm-8">@Model.crsid</dd>

                        <!-- Course Name -->
                        <dt class="col-sm-4 fw-bold">Course Name:</dt>
                        <dd class="col-sm-8">@Model.crsname</dd>

                        <!-- Hours -->
                        <dt class="col-sm-4 fw-bold">Hours:</dt>
                        <dd class="col-sm-8">@Model.hours</dd>

                        <!-- Status -->
                        <dt class="col-sm-4 fw-bold">Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.isActive ? "bg-success" : "bg-secondary")">
                                @(Model.isActive ? "Active" : "Inactive")
                            </span>
                        </dd>
                    </dl>
                </div>
                <div class="card-footer bg-white d-flex justify-content-between pt-3 border-top-0">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="crsid" />
                        <button type="submit" class="btn btn-danger btn-lg" >
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-arrow-left-circle"></i> Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}