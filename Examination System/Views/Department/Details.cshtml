@model Examination_System.Models.View_Models.DepartmentViewModel

@{
    ViewData["Title"] = "Department Details";
}

<h2>Department Details</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Branch</dt>
        <dd class="col-sm-10">@Model.BranchName</dd>
        <dt class="col-sm-2">Manager</dt>
        <dd class="col-sm-10">@Model.ManagerName</dd>
        <dt class="col-sm-2">Is Active</dt>
        <dd class="col-sm-10">@Model.IsActive</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DepartmentId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>