@model Examination_System.Models.View_Models.BranchViewModel  

@{  
   ViewData["Title"] = "Delete Branch";  
}  

<h2>Delete Branch</h2>  

<h3>Are you sure you want to delete this branch?</h3>  
<div class="card p-3 shadow-sm">  
   <h4 class="text-danger">@Model.Name</h4>  
   <hr />  
   <dl class="row">  
       <dt class="col-sm-3 font-weight-bold">Name</dt>  
       <dd class="col-sm-9">@Model.Name</dd>  
       <dt class="col-sm-3 font-weight-bold">Location</dt>  
       <dd class="col-sm-9">@Model.Location</dd>  
       <dt class="col-sm-3 font-weight-bold">Manager</dt>  
       <dd class="col-sm-9">@Model.ManagerName</dd>  
   </dl>  

   <form asp-action="Delete" class="mt-3">  
       <input type="hidden" asp-for="BranchId" />  
       <div class="d-flex justify-content-between">  
           <input type="submit" value="Delete" class="btn btn-danger" />  
           <a asp-action="Index" class="btn btn-secondary">Back to List</a>  
       </div>  
   </form>  
</div>