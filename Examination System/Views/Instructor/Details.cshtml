@model Examination_System.Models.Instructor

@{
    ViewData["Title"] = "Instructor Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="mb-0"><i class="bi bi-person-badge-fill me-2"></i>@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-4">

                    <!-- Instructor Info -->
                    <div class="text-center mb-4">
                        <i class="bi bi-person-circle text-primary display-4"></i>
                        <h4 class="mt-3">@Model.ins?.name</h4>
                        <p class="text-muted">@Model.jobTitle</p>
                    </div>

                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold"><i class="bi bi-person-fill me-2"></i>Name:</dt>
                        <dd class="col-sm-8">@Model.ins?.name</dd>

                        <dt class="col-sm-4 fw-bold"><i class="bi bi-building me-2"></i>City:</dt>
                        <dd class="col-sm-8">@Model.ins?.st_city</dd>

                        <dt class="col-sm-4 fw-bold"><i class="bi bi-envelope-fill me-2"></i>Email:</dt>
                        <dd class="col-sm-8">@Model.ins?.email</dd>

                        <dt class="col-sm-4 fw-bold"><i class="bi bi-telephone-fill me-2"></i>Phone Number:</dt>
                        <dd class="col-sm-8">@Model.ins?.phone</dd>

                        <dt class="col-sm-4 fw-bold"><i class="bi bi-bank me-2"></i>Department ID:</dt>
                        <dd class="col-sm-8">@Model.ins?.dept_id</dd>

                        <dt class="col-sm-4 fw-bold"><i class="bi bi-diagram-3 me-2"></i>Branch ID:</dt>
                        <dd class="col-sm-8">@Model.ins?.branch_id</dd>

                        <dt class="col-sm-4 fw-bold"><i class="bi bi-briefcase-fill me-2"></i>Job Title:</dt>
                        <dd class="col-sm-8">@Model.jobTitle</dd>

                        <dt class="col-sm-4 fw-bold"><i class="bi bi-currency-dollar me-2"></i>Salary:</dt>
                        <dd class="col-sm-8">@Model.salary?.ToString("C")</dd>

                        <dt class="col-sm-4 fw-bold"><i class="bi bi-toggle-on me-2"></i>Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.isActive ? "bg-success" : "bg-secondary")">
                                @(Model.isActive ? "Active" : "Inactive")
                            </span>
                        </dd>
                    </dl>

                    <hr class="my-4" />

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2 d-md-flex justify-content-between mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.insid" class="btn btn-warning">
                            <i class="bi bi-pencil-square me-2"></i>Edit
                        </a>
                        <a asp-action="AssignCourse" asp-route-instructorId="@Model.insid" class="btn btn-success">
                            <i class="bi bi-bookmark-plus me-2"></i>Assign Course
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>