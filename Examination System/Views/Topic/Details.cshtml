@model Examination_System.Models.Topic

@{
    ViewData["Title"] = "Topic Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="mb-0"><i class="bi bi-journal-text me-2"></i>@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-4 text-center">

                    <!-- Topic Avatar -->
                    <div class="text-center mb-4">
                        <i class="bi bi-journal-bookmark-fill text-primary display-4"></i>
                    </div>

                    <h4 class="text-primary">@Model.title</h4>
                    <p class="text-muted">@(Model.crs != null ? Model.crs.crsname : "Not Assigned")</p>

                    <hr />

                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold text-start"><i class="bi bi-hash me-2"></i>Topic ID:</dt>
                        <dd class="col-sm-8 text-end">@Model.topicid</dd>

                        <dt class="col-sm-4 fw-bold text-start"><i class="bi bi-type-bold me-2"></i>Title:</dt>
                        <dd class="col-sm-8 text-end">@Model.title</dd>

                        <dt class="col-sm-4 fw-bold text-start"><i class="bi bi-book-half me-2"></i>Assigned Course:</dt>
                        <dd class="col-sm-8 text-end">
                            @(Model.crs != null ? Model.crs.crsname : "Not Assigned")
                        </dd>

                        <dt class="col-sm-4 fw-bold text-start"><i class="bi bi-toggle-on me-2"></i>Status:</dt>
                        <dd class="col-sm-8 text-end">
                            <span class="badge @(Model.isActive ? "bg-success" : "bg-secondary")">
                                @(Model.isActive ? "Active" : "Inactive")
                            </span>
                        </dd>
                    </dl>

                    <hr class="my-4" />

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2 d-md-flex justify-content-between mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.topicid" class="btn btn-warning">
                            <i class="bi bi-pencil-square me-2"></i>Edit
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>