@model Examination_System.Models.Topic

@{
    ViewData["Title"] = "Edit Topic";
}

<h2 class="text-center text-primary mb-4">@ViewData["Title"]</h2>

<hr class="mb-4" />

<div class="row justify-content-center">
    <div class="col-md-6 shadow-lg p-4 rounded bg-light">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="topicid" />

            <div class="form-group mb-3">
                <label asp-for="title" class="form-label fw-bold"></label>
                <input asp-for="title" class="form-control border-primary shadow-sm" />
                <span asp-validation-for="title" class="text-danger small"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="crsid" class="form-label fw-bold">Select Course</label>
                <select asp-for="crsid" class="form-control border-primary shadow-sm" asp-items="ViewBag.CourseList"></select>
                <span asp-validation-for="crsid" class="text-danger small"></span>
            </div>

            <div class="form-group text-end">
                <input type="submit" value="Save" class="btn btn-success me-2 px-4" />
                <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
