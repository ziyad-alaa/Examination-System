@model IEnumerable<Examination_System.Models.View_Models.BranchViewModel>

@{
   ViewData["Title"] = "Branches";
}

<div class="container mt-4">
   <div class="row">
       <div class="col">
           <h2 class="text-center">@ViewData["Title"]</h2>
       </div>
   </div>

   <div class="row mt-3">
       <div class="col text-end">
           <a asp-action="Create" class="btn btn-primary">Create New Branch</a>
       </div>
   </div>

   <div class="row mt-4">
       <div class="col">
           <table class="table table-striped table-bordered">
               <thead class="table-dark">
                   <tr>
                       <th>Name</th>
                       <th>Location</th>
                       <th>Manager</th>
                       <th>Status</th>
                       <th class="text-center">Actions</th>
                   </tr>
               </thead>
               <tbody>
                   @if (Model.Any())
                   {
                       @foreach (var item in Model)
                       {
                           <tr>
                               <td>@item.Name</td>
                               <td>@item.Location</td>
                               <td>@item.ManagerName</td>
                               <td>@(item.IsActive ? "Active" : "Not Active")</td>
                               <td class="text-center">
                                   <a asp-action="Edit" asp-route-id="@item.BranchId" class="btn btn-warning btn-sm">Edit</a>
                                   <a asp-action="Details" asp-route-id="@item.BranchId" class="btn btn-info btn-sm">Details</a>
                                   <a asp-action="Delete" asp-route-id="@item.BranchId" class="btn btn-danger btn-sm">Delete</a>
                               </td>
                           </tr>
                       }
                   }
                   else
                   {
                       <tr>
                           <td colspan="5" class="text-center">No branches available.</td>
                       </tr>
                   }
               </tbody>
           </table>
       </div>
   </div>
</div>