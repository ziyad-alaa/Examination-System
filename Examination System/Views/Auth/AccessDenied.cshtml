@{
    ViewData["Title"] = "Access Denied";
    Layout = "_AuthLayout";
}

<div class="auth-container">
    <div class="card shadow-lg">
        <div class="card-body p-5 text-center">
            <div class="text-center mb-4">
                <i class="fas fa-ban text-danger" style="font-size: 5rem;"></i>
                <h2 class="mt-3">@ViewData["Title"]</h2>
            </div>

            <div class="alert alert-danger">
                <h4>You don't have permission to access this resource</h4>
                <p>Please contact your administrator if you believe this is an error.</p>
            </div>

            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-home"></i> Return Home
                </a>
                <a asp-controller="Auth" asp-action="Logout" class="btn btn-secondary">
                    <i class="fas fa-sign-out-alt"></i> Login as Different User
                </a>
            </div>
        </div>
    </div>
</div>