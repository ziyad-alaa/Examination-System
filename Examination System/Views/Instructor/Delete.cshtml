@model Examination_System.Models.Instructor

@{
    ViewData["Title"] = "Deactivate Instructor";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-danger shadow-sm rounded-3">
                <div class="card-header bg-danger text-white text-center py-4">
                    <h3 class="mb-0"><i class="bi bi-person-dash-fill me-2"></i>Deactivate Instructor</h3>
                </div>
                <div class="card-body p-4 text-center">

                    <div class="text-center mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-danger display-4"></i>
                    </div>

                    <h4 class="text-danger mb-4">Are you sure?</h4>

                    <p class="lead mb-4">
                        Do you really want to deactivate the instructor below?
                    </p>

                    <hr />

                    <h5><strong>@Model.jobTitle</strong></h5>
                    <p class="text-muted">@Model.ins?.name</p>

                    <hr />

                    <form asp-action="Delete" asp-route-id="@Model.insid" method="post">
                        @Html.AntiForgeryToken()

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-person-slash me-2"></i>Yes, Deactivate
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-arrow-left-circle me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>