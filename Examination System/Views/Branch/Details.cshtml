@model Examination_System.Models.View_Models.BranchViewModel

@{
   ViewData["Title"] = "Branch Details";
}

<h2>Branch Details</h2>

<div class="card">
   <div class="card-header bg-primary text-white">
       <h4>@Model.Name</h4>
   </div>
   <div class="card-body">
       <dl class="row">
           <dt class="col-sm-3 font-weight-bold">Name</dt>
           <dd class="col-sm-9">@Model.Name</dd>
           <dt class="col-sm-3 font-weight-bold">Location</dt>
           <dd class="col-sm-9">@Model.Location</dd>
           <dt class="col-sm-3 font-weight-bold">Manager</dt>
           <dd class="col-sm-9">@Model.ManagerName</dd>
           <dt class="col-sm-3 font-weight-bold">Status</dt>
           <dd class="col-sm-9">@(Model.IsActive ? "Active" : "Inactive")</dd>
       </dl>
   </div>
</div>
<div class="mt-3">
   <a asp-action="Edit" asp-route-id="@Model.BranchId" class="btn btn-warning">Edit</a>
   <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>