@model IEnumerable<Examination_System.Models.View_Models.DepartmentViewModel>

@{
    ViewData["Title"] = "Departments";
}

<h2>Departments</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create Department</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Branch</th>
            <th>Manager</th>
            <th>Is Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.BranchName</td>
                <td>@item.ManagerName</td>
                <td>@item.IsActive</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.DepartmentId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.DepartmentId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.DepartmentId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>