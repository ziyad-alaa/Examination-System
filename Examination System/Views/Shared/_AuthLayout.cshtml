<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Xamly Examination System</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Animate.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/auth-layout.css" asp-append-version="true">


</head>
<body>
    <div class="auth-wrapper">
        <!-- Hero Section -->
        <div class="auth-hero">
            <div class="hero-content">
                <!-- Logo with subtle animation -->
                <div class="logo-wrapper">
                    <img src="~/assets/img/logo.png" alt="Xamly Logo" class="hero-logo animate__animated animate__fadeIn">
                    <div class="logo-pulse"></div>
                </div>

                <!-- Main heading -->
                <h1 class="hero-heading animate__animated animate__fadeIn">
                    Examination System
                </h1>

                <!-- Tagline with fade-in effect -->
                <p class="hero-tagline animate__animated animate__fadeIn animate__delay-1s">
                    Precision • Integrity • Excellence
                </p>

                <!-- Feature list with checkmark icons -->
                <ul class="hero-features">
                    <li class="animate__animated animate__fadeInLeft">
                        <i class="bi bi-shield-check"></i> Secure encrypted platform
                    </li>
                    <li class="animate__animated animate__fadeInLeft animate__delay-1s">
                        <i class="bi bi-bar-chart"></i> Real-time analytics dashboard
                    </li>
                    <li class="animate__animated animate__fadeInLeft animate__delay-2s">
                        <i class="bi bi-people"></i> 10,000+ educators trust us
                    </li>
                </ul>

                <!-- Animated stats -->
                <div class="hero-stats">
                    <div class="stat-item">
                        <div class="stat-number" data-count="98.7">0</div>
                        <div class="stat-label">Success Rate</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number" data-count="24">0</div>
                        <div class="stat-label">Support Hours</div>
                    </div>
                </div>
            </div>

            <!-- Subtle background pattern -->
            <div class="hero-pattern"></div>
        </div>

        <!-- Form Container -->
        <div class="auth-container">
            <div class="auth-card">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>