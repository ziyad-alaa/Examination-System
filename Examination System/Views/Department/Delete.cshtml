@model Examination_System.Models.View_Models.DepartmentViewModel

@{
    ViewData["Title"] = "Delete Department";
}

<h2>Delete Department</h2>

<h3>Are you sure you want to delete this department?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Branch</dt>
        <dd class="col-sm-10">@Model.BranchName</dd>
        <dt class="col-sm-2">Manager</dt>
        <dd class="col-sm-10">@Model.ManagerName</dd>
        <dt class="col-sm-2">Is Active</dt>
        <dd class="col-sm-10">@Model.IsActive</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DepartmentId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>